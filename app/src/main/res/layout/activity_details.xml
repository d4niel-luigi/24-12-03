<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewKonyvCim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Könyv címe"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/textViewKonyvSzerzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Könyv szerzője"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/textViewOldal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oldalszám"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/textViewRandomEv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023"
            android:textSize="18sp"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vissza"
            android:textSize="20sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/torlesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Törlés"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
